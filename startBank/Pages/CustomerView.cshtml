@page
@model startBank.Pages.CustomerViewModel
@{
}




<h1 style="padding-top:65px;">Customers</h1>

<h3>Page @Model.CurrentPage</h3>


<form method="get">
    <input asp-for="@Model.Q" />
    <input type="hidden" asp-for="@Model.OneCustomerId" />
    <button type="submit" class="get-started-btn scrollto" style=" background: black">
        <i class="fas fa-search"></i>
    </button>
</form>



<table class="table table-#373b3e" style="color:white;">
    <thead>
        <tr>
            <th scope="col"> Id</th>
            <th scope="col">
                NationalID
                <a asp-page="/CustomerView"
                   asp-route-q="@Model.Q"
                   asp-route-sortColumn="NationalID"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/CustomerView"
                   asp-route-q="@Model.Q"
                   asp-route-sortColumn="NationalID"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>
            <th scope="col">
                Name
                <a asp-page="/CustomerView"
                   asp-route-q="@Model.Q"
                   asp-route-sortColumn="Name"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/CustomerView"
                   asp-route-q="@Model.Q"
                   asp-route-sortColumn="Name"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>
            <th scope="col">
                Address
                <a asp-page="/CustomerView"
                   asp-route-q="@Model.Q"
                   asp-route-sortColumn="Address"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/CustomerView"
                   asp-route-q="@Model.Q"
                   asp-route-sortColumn="Address"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>
            <th scope="col">
                City
                <a asp-page="/CustomerView"
                   asp-route-q="@Model.Q"
                   asp-route-sortColumn="City"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/CustomerView"
                   asp-route-q="@Model.Q"
                   asp-route-sortColumn="City"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="CustomerHover">
        @foreach (var c in Model.Customers)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.NationalID</td>
                <td>@c.Name</td>
                <td>@c.Address</td>
                <td>@c.City</td>
                <td><a asp-page="/OneCustomer" asp-route-id="@c.Id" class="get-started-btn scrollto">View</a></td>
            </tr>
        }
   
    </tbody>
    <td></td>
    <td></td>
    <td></td>
    <td>
        @if (Model.CurrentPage != 1)
        {
            <a class="get-started-btn scrollto"
           asp-page="/CustomerView"
           asp-route-oneCustomerId="@Model.Customers"
           asp-route-q="@Model.Q"
           asp-route-sortColumn="@Model.SortColumn"
           asp-route-sortOrder="@Model.SortOrder"
           asp-route-p="@(Model.CurrentPage-1)">
                Prev
            </a>
        }
        @if (Model.Customers.Any() && Model.CurrentPage != null)
        {
            <a class="get-started-btn scrollto"
           asp-page="/CustomerView"
           asp-route-oneCustomerId="@Model.OneCustomerId"
           asp-route-q="@Model.Q"
           asp-route-sortColumn="@Model.SortColumn"
           asp-route-sortOrder="@Model.SortOrder"
           asp-route-pageNo="@(Model.CurrentPage+1)"
           asp-route-p="@(Model.CurrentPage + 1)">
                Next
            </a>
        }
    </td>
</table>
