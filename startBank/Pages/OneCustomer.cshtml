    <a asp-page="/Account/Index" id="shadow__btn" class=" bx bx-pie-chart-alt"
       asp-route-accountId="@detail.AccountId">History</a>

    <a asp-page="/Account/Withdraw" id="shadow__btn" class='bx bx-money-withdraw'
       asp-route-accountId="@Model.OneCustomerDetail.AccountId">Withdraw</a>

    <a asp-page="/Account/Deposit" id="shadow__btn" class='bx bx-plus-circle get-started-btn scrollto'
       asp-route-accountId="@Model.OneCustomerDetail.AccountId">Deposite</a>

