<div class="container-fluid">
    <div class="row">
        <div class="profile-head">
            <div class="profiles col-xs-8 col-xs-push-2  col-sm-10 col-sm-push-1 thumbnail">
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <div class="row">
                        <img src="https://bootdey.com/img/Content/avatar/avatar6.png" class="img-responsive" />
                        <li class="img-name"><h1>@detail.Name</h1></li>
                    </div>
                </div>

                <div class="col-md-9" style="color: white">
                    <div id="row">
                        <span class="col-sm-12"></span>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <ul>
                                <li>Gender:<span> @detail.Gender</span></li>
                                <li>Name:<span> @detail.Name</span></li>
                                <li>Lastname:<span> @detail.LastName</span></li>
                                @if (@detail.Country != "Norway")
                                {
                                    <li>National ID:<span> @detail.NationalID</span></li>
                                }
                                else
                                {
                                    <li>NationalID: <span> @message</span></li>
                                }
                                <li>Country:<span> @detail.Country</span></li>
                                <li>City:<span> @detail.City</span></li>
                                <li>Address:<span> @detail.Address</span></li>
                            </ul>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <ul>
                                <li>Email:<span> @detail.Email</span></li>
                                <li>Phone:<span> @detail.Phone</span></li>
                                <li>Account ID:<span> @detail.AccountId</span></li>
                                <li>Balance:<span> @detail.Balance</span></li>
                                <li>Total balance:<span> @detail.TotalBalance</span></li>
                            </ul>   
                        </div>
