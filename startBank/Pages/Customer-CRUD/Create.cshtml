@page
@model startBank.Pages.Customer_CRUD.CreateModel
@{
    var successMessage = ViewData["Message"]?.ToString();
}
<p style="padding-top:60px;"></p>
<h1 style="color:white; display:flex; justify-content:center;">Create a new Customer</h1>

@if (!string.IsNullOrWhiteSpace(successMessage))
{
    <div class="alert alert-success" role="alert">
        @successMessage
    </div>
}
<form method="post" style="color:white" class="needs-validation" novalidate >
    <div style="display:flex; justify-content:space-around">
    <div>
    <div class="mb-3">
        <label class="form-label">Gender</label>
      <p><input type="text" class="form-control" asp-for="CreateUserRequest.Gender" /></p>
    </div>
    <div class="mb-3">
        <label class="form-label">Name</label>
                <p><input type="text" class="form-control" asp-for="CreateUserRequest.Name" /></p>
    </div>
    <div class="mb-3">
        <label class="form-label">LastName</label>
                <p> <input type="text" class="form-control" asp-for="CreateUserRequest.LastName" /></p>
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
                <p>  <input type="text" class="form-control" asp-for="CreateUserRequest.Address" /></p>
    </div>
    <div class="mb-3">
        <label class="form-label">City</label>
                <p> <input type="text" class="form-control" asp-for="CreateUserRequest.City" /></p>
    </div>
    <div class="mb-3">
        <label class="form-label">Zipcode</label>
                <p> <input type="text" class="form-control" asp-for="CreateUserRequest.Zipcode" /></p>
    </div>
    </div>


    <div>
    <div class="mb-3">
        <label class="form-label">Country</label>
                <p>  <input type="text" class="form-control" asp-for="CreateUserRequest.Country" /></p>
    </div>
    <div class="mb-3">
        <label class="form-label">Country Code</label>
                <p> <input type="text" class="form-control" asp-for="CreateUserRequest.CountryCode" /></p>
    </div>
    <div class="mb-3">
        <label class="form-label">Birthday</label>
                <p> <input type="date" class="form-control" asp-for="CreateUserRequest.Birthday" /></p>
    </div>
    <div class="mb-3">
        <label class="form-label">NationalID</label>
                <p>  <input type="text" class="form-control" asp-for="CreateUserRequest.NationalID" /></p>
    </div>
    <div class="mb-3">
        <label class="form-label">Telephone country code</label>
                <p>  <input type="text" class="form-control" asp-for="CreateUserRequest.Telephonecountrycode" /></p>
    </div>
    <div class="mb-3">
        <label class="form-label">Phone</label>
                <p>  <input type="text" class="form-control" asp-for="CreateUserRequest.Phone" /></p>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
                <p> <input type="email" class="form-control" asp-for="CreateUserRequest.Email" /></p>
    </div>
    </div>
    </div>
    <div>
        <button class="btn btn-primary" type="submit" id="shadow__btn">Save</button>
    </div>
</form>





