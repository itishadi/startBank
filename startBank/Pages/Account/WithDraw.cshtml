@page
@model startBank.Pages.Account.WithDrawModel
@{
}
<h1 style="padding-top:40px; color:white">Withdraw</h1>

<h3 style="color:white">Balance: @Model.Balance kr</h3>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post" style="color:white">
    <div class="form-group">
        <label asp-for="Amount">Amount</label>
        <input class="form-control" asp-for="Amount" />
        <div>
            <span class="field-validation-error" asp-validation-for="Amount"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="WithdrawDate">Date</label>
        <input class="form-control" asp-for="WithdrawDate" />
        <div>
            <span class="field-validation-error" asp-validation-for="WithdrawDate"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Comment">Comment</label>
        <input class="form-control" asp-for="Comment" />
        <div>
            <span class="field-validation-error" asp-validation-for="Comment"></span>
        </div>
    </div>

    <button type="submit" class="get-started-btn scrollto" style="background: black">Withdraw</button>
</form>
